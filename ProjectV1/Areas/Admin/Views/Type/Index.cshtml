@model List<EntityLayer.Concrete.AnimalType>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/Layouts/_AdminLayout.cshtml";
}

<h6>@Localizer["tur"]</h6>
<table class="table table-hover">
    <tr>
        <th>Id</th>
        <th>@Localizer["ad"]</th>
        <th>@Localizer["aktif"]</th>
    </tr>
    @foreach (var item in Model)
    {
        <tr>
            <td>@item.AnimalTypeId</td>
            <td>@item.Name</td>
            <td>@item.Status</td>
        </tr>

    }
</table>

<a href="/Admin/Type/AddType" class="btn btn-outline-danger">@Localizer["ekle"]</a>
