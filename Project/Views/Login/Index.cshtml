@model Project.Models.SignInViewModel
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/Layouts/_HomeLayout.cshtml";
}

<!DOCTYPE html>
<html lang="tr">


<body>

	<section class="main-content-w3layouts-agileits">
		<div class="container">
			<h3 class="tittle">Giriş Yap</h3>
			<div class="row inner-sec">
				<div class="login p-5 bg-light mx-auto mw-100">
					<form asp-action="Index" asp-controller="Login" method="post">
						<div class="form-group">
							<label>Mail </label>
							<input type="text" class="form-control" asp-for="Mail">

						</div>
						<div class="form-group">
							<label>Şifre</label>
							<input type="password" class="form-control" asp-for="Password" required="">
						</div>

						<button type="submit" class="btn btn-primary submit mb-4">Giriş Yap</button>
						<p><a href="/Register/SignUp/"> Hesabın Yok Mu?</a></p>
					</form>
				</div>
			</div>
		</div>
	</section>



</body>

</html>
