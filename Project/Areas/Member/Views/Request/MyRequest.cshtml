@model List<EntityLayer.Concrete.AnimalRequest>
@{
    ViewData["Title"] = "MyRequest";
    Layout = "~/Views/Shared/Layouts/_MemberLayout.cshtml";
}

<h1>MyRequest</h1>


<table class="table table-bordered">
    <tr>
        <th>Durum</th>
        <th>Zaman</th>
        <th>Hayvan İsmi</th>

    </tr>
    @foreach (var item in Model)
    {
        <tr>
            <td>
                @{
                    string durum;
                    if (item.Status == false)
                    {
                        durum = "Onay Bekliyor";
                    }
                    else
                        durum = "Onaylandı";

                  }
                  @durum

             </td>
            <td>@item.time</td>
            <td>@item.Animal.Name</td>
        </tr>
    }
</table>