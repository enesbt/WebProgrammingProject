@model List<EntityLayer.Concrete.AnimalHouse>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/Layouts/_AdminLayout.cshtml";
}


<h6>Barınaklar</h6>
<table class="table table-hover">
    <tr>
        <th>Id</th>
        <th>Barınak Adı</th>
        <th>Adres</th>
        <th>Aktif</th>
    </tr>
    @foreach (var item in Model)
    {
        <tr>
            <td>@item.AnimalHouseId</td>
            <td>@item.Name</td>
            <td>@item.Adress</td>
            <td>@item.Status</td>
        </tr>

    }
</table>

<a href="/Admin/AnimalHome/AddHouse" class="btn btn-outline-danger">Yeni Barınak Ekle</a>


